<h1>Customers</h1>
<div class="row">
  <div class="col-sm-4"><input id="searchCustomerId" placeholder="Search by Customer ID"></div>
  <div class="col-sm-4"></div>
  <div class="col-sm-4"><a class="btn" href="/create">Create New Customer</a></div>
</div>


<table id="customersTable" class="display" style="width:100%">
  <thead>
    <tr>
      <th>CustomerID</th>
      <th>First</th>
      <th>Last</th>
      <th>Address</th>
      <th>City</th>
      <th>Province</th>
      <th>Postal</th>
      <th>Actions</th>
    </tr>
  </thead>
</table>

<!-- Delete confirmation modal -->
<div id="deleteModal" class="modal">
  <div class="modal-content">
    <p id="deleteMsg">Are you sure you want to delete?</p>
    <div class="modal-buttons">
      <button id="confirmDelete" class="btn btn-confirm">Yes, Delete</button>
      <button id="cancelDelete" class="btn btn-cancel">Cancel</button>
    </div>
  </div>
</div>
